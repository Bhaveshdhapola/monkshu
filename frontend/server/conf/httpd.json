{
	"port": 8080,
	"host": "::",
	"extensions": ["redirect"],
	"redirects": [{"^http://localhost:8080/index.html$":"http://localhost:8080/apps/[your app]/index.html"},
		{"^http://localhost:8080/$":"http://localhost:8080/apps/[your app]/index.html"},
		{"^http://localhost:8080$":"http://localhost:8080/apps/[your app]/index.html"}],
	"webroot": "./../",
	"logdir": "./logs",
	"libdir": "./lib",
	"extdir": "./ext",
	"confdir": "./conf",
	"accesslog": "./logs/access.log.json",
	"errorlog": "./logs/error.log.json",
	"indexfile": "index.html",
	"ssl": false,
	"enableGZIPEncoding": true,
	"ipblacklistRefresh": 5000,
	"diskCache": {"refresh": 10000, "dontCache": [".*\\.pdf"], "maxSizeInMB": "1024", "ignoreAfterMaxHits":"2", "autoUglifyJS": true, "minifier": "uglify-js", "autoMinifyHTML": true, "autoMinifyCSS": true},
	"sslKeyFile":"/etc/letsencrypt/live/[your domain]/privkey.pem",
	"sslCertFile":"/etc/letsencrypt/live/[your domain]/fullchain.pem",
	"httpdHeaders": {
		"Server": "Monkshu HTTPD",
		"X-XSS-Protection": 1,
		"X-Frame-Options": "deny",
		"X-Content-Type-Options": "nosniff"
	},
	"mimeTypes" : {
		".html":	"text/html",
		".htm":		"text/html",
		".thtml":	"text/html",
		".css":		"text/css",
		".js":		"text/javascript",
		".mjs":		"text/javascript",
		".page":	"text/plain",
		".otf":		"application/x-font-opentype",
		".ttf":		"application/x-font-truetype",
		".pdf":		"application/pdf",
		".png":		["image/png", false],
		".jpg":		["image/jpeg", false],
		".jpeg":	["image/jpeg", false],
		".gif":		["image/gif", false],
		".md":		["text/markdown", true],
		".svg":		"image/svg+xml",
		".dummy":   ["<put content mime type here>", "put true for compressable mime and false for not compressable"]
	},
	"restrictServerTree": true,
	"timeout": 120000
}