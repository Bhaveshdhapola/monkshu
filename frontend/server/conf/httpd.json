{
	"port": 8080,
	"host": "::",
	"webroot": "./../",
	"logdir": "./logs",
	"libdir": "./lib",
	"accesslog": "./logs/access.log.json",
	"errorlog": "./logs/error.log.json",
	"indexfile": "index.html",
	"ssl": false,
	"enableGZIPEncoding": true,
	"pfxPath": "<path to PFX (.key) File>",
	"pfxPassphrase": "<passphrase for the pfx file>",
	"httpdHeaders": {
		"Server": "Monkshu HTTPD",
		"X-Frame-Options": "deny",
		"X-Content-Type-Options": "nosniff",
		"Cache-Control": "no-cache, no-store, must-revalidate",
		"Pragma": "no-cache",
		"X-XSS-Protection": 1
	},
	"mimeTypes" : {
		".html":	"text/html",
		".htm":		"text/html",
		".thtml":	"text/html",
		".css":		"text/css",
		".js":		"text/javascript",
		".mjs":		"text/javascript",
		".page":	"text/plain",
		".otf":		"application/x-font-opentype",
		".ttf":		"application/x-font-truetype",
		".pdf":		"application/pdf",
		".png":		["image/png", false],
		".jpg":		["image/jpeg", false],
		".jpeg":	["image/jpeg", false],
		".gif":		["image/gif", false],
		".md":		["text/markdown", true],
		".dummy":   ["<put content mime type here>", "put true for compressable mime and false for not compressable"]
	},
	"restrictServerTree": true,
	"timeout": 120000
}